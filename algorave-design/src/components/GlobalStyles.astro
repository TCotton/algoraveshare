---
import 'modern-normalize/modern-normalize.css';
---
<style is:global>
    @layer base, utils, components;
    @import '../../node_modules/@webtui/css/dist/base.css';
    @import '../../node_modules/@webtui/css/dist/full.css';
    @import '../../node_modules/@webtui/theme-catppuccin/dist/index.css';

    .container {
        margin: 0 auto;
        padding: 2ch;
    }
    h1 {
        margin-bottom: 1lh
    }
    h2 {
        margin-bottom: 1lh
    }
    h3 {
        margin-bottom: 1lh
    }

    .space-mono-regular {
        font-family: "Space Mono", monospace;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
    }

    .space-mono-bold {
        font-family: "Space Mono", monospace;
        font-optical-sizing: auto;
        font-weight: 700;
        font-style: normal;
    }

    .space-mono-regular-italic {
        font-family: "Space Mono", monospace;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: italic;
    }

    .space-mono-bold-italic {
        font-family: "Space Mono", monospace;
        font-optical-sizing: auto;
        font-weight: 700;
        font-style: italic;
    }

    @layer base {
        :root {
            --font-family: "Roboto Mono", monospace;
            --line-height-paragraph: 1.8;
        }
    }
    p {
        line-height: var(--line-height-paragraph);
    }

</style>