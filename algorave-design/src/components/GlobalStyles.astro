---
import 'modern-normalize/modern-normalize.css';
---
<style is:global>
    @layer base, utils, components;
    @import '../../node_modules/@webtui/css/dist/full.css';
    @import '../../node_modules/@webtui/theme-catppuccin/dist/index.css';

    @keyframes opacity-fade-in {
        0% {
            /* pushes the sun down past the viewport */
            opacity: 1
        }
        50% {
            opacity: 0.6
        }
        100% {
            /* returns the sun to its default position */
            opacity: 1
        }
    }

    @keyframes change-colour {
        0% {
            fill: color-mix(var(--lavender) 100%, var(--blue) 0%);
        }
        25% {
            fill: color-mix(var(--lavender) 50%, var(--blue) 50%);
        }
        25% {
            fill: color-mix(var(--lavender) 0%, var(--blue) 100%);
        }
        75% {
            fill: color-mix(var(--lavender) 50%, var(--blue) 50%);
        }
        100% {
            fill: color-mix(var(--lavender) 100%, var(--blue) 0%);
        }
    }

    .svg-icon {
        .path-one {
            animation: 4s linear 0s infinite alternate opacity-fade-in,
            4s linear 0s infinite alternate change-colour;
            animation-play-state: paused;
        }

        .path-two {
            animation: 3s linear 1s infinite alternate opacity-fade-in, 3s linear 1s infinite alternate change-colour;
            animation-play-state: paused;
        }

        .path-three {
            animation: 2s linear 2s infinite alternate opacity-fade-in, 2s linear 2s infinite alternate change-colour;
            animation-play-state: paused;
        }

        .path-four {
            animation: 5s linear 3s infinite alternate opacity-fade-in, 5s linear 3s infinite alternate change-colour;
            animation-play-state: paused;
        }

        .path-five {
            animation: 6s linear 4s infinite alternate opacity-fade-in, 6s linear 4s infinite alternate change-colour;
            animation-play-state: paused;
        }
    }

    .svg-icon-two {
        .path-one {
            animation: 4s linear 0s infinite alternate opacity-fade-in,
            4s linear 0s infinite alternate change-colour;
            animation-play-state: paused;
        }

        .path-two {
            animation: 3s linear 1s infinite alternate opacity-fade-in, 3s linear 1s infinite alternate change-colour;
            animation-play-state: paused;
        }

        .path-three {
            animation: 2s linear 2s infinite alternate opacity-fade-in, 2s linear 2s infinite alternate change-colour;
            animation-play-state: paused;
        }

        .path-four {
            animation: 5s linear 3s infinite alternate opacity-fade-in, 5s linear 3s infinite alternate change-colour;
            animation-play-state: paused;
        }
    }

    .container {
        margin: 0 auto;
        padding: 3ch;
    }

    button {
        cursor: pointer;
    }

    @media (max-width: 768px) {
        .container {
            padding: 1ch;
        }
    }

    h1 {
        margin-bottom: 1lh
    }

    h2 {
        margin-bottom: 1lh
    }

    h3 {
        margin-bottom: 1lh
    }

    .space-mono-regular {
        font-family: "Space Mono", monospace;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
    }

    .space-mono-bold {
        font-family: "Space Mono", monospace;
        font-optical-sizing: auto;
        font-weight: 700;
        font-style: normal;
    }

    .space-mono-regular-italic {
        font-family: "Space Mono", monospace;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: italic;
    }

    .space-mono-bold-italic {
        font-family: "Space Mono", monospace;
        font-optical-sizing: auto;
        font-weight: 700;
        font-style: italic;
    }

    .description, .left-column, .right-column, .social-media, .audio-section, .snippets-content, .input-youtube-link {
        padding: 0 2ch 4ch 2ch;
        position: relative;

        span {
            margin-bottom: 1lh;
        }

        h1 {
            text-box: trim-end cap alphabetic;
        }

        .icon {
            position: absolute;
            top: -20px;
            right: -20px;
        }
    }

    .input-youtube-link {
        padding: 0 4ch 2ch 4ch;
    }

    .content, .description, .audio-section, .tags {
        margin-bottom: 2lh; /* Space between sections */
    }

    .social-media {
        padding: 0 2ch 4ch 2ch;
    }

    .description {
        padding: 0 4ch 5ch 4ch;
    }

    .select-container {
        padding: 0 2ch 2ch 2ch;
        margin-bottom: 1lh;

        a {
            color: rgb(85, 26, 139);
        }

        .menu-item:first-of-type a {
            text-decoration: none;
        }

        .menu-item {
            margin-bottom: 0.2lh;

        }

        .menu-wrapper {
            background-color: rgb(from var(--flamingo) r g b / 0.3);
        }
    }

    h2 > span {
        color: var(--yellow);
    }

    :root {
        @layer components {
            input,
            [is-~='input'],
            &[size-='thicc'] {
                height: 3lh;
                width: 100%;
                padding: 1lh 8ch;
            }
        }
    }

    :root {
        @layer components {
            .field-upload-audio {
                input,
                [is-~='input'],
                &[size-='thicc'] {
                    height: 3lh;
                    width: 100%;
                    padding: 0 1ch;
                    cursor: pointer;
                }
            }
        }
    }

    :root {
        @layer components {
            .input-youtube-link {
                input,
                [is-~='input'],
                &[size-='thicc'] {
                    height: 3lh;
                    width: 100%;
                    padding: 0 1ch;
                    cursor: pointer;
                }
            }
        }
    }

    :root {
        @layer components {
            .input-youtube-link {
                input,
                [is-~='input'],
                &[size-='thicc'] {
                    height: 3lh;
                    width: 100%;
                    padding: 0 1ch;
                    cursor: pointer;
                }
            }
        }
    }

    :root {
        @layer components {
            .field-upload-audio {
                [is-~='badge'] {
                    &[variant-='background0'] {
                        label {
                            color: rgb(205, 214, 244) !important;
                        }
                    }
                }
            }
        }
    }

    :root {
        @layer components {
            .input-youtube-link {
                [is-~='badge'] {
                    &[variant-='background0'] {
                        label {
                            color: rgb(205, 214, 244)!important
                        }
                    }
                }
            }
        }
    }

    :root {
        @layer components {
            .field-upload-audio {
                input::file-selector-button {
                    --button-primary: var(--foreground0);
                    --button-secondary: var(--background0);
                    --mapped-primary: var(--button-primary);
                    --mapped-secondary: var(--button-secondary);
                    color: var(--mapped-secondary);
                    font-size: var(--font-size);
                    line-height: var(--line-height);
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    border: none;
                    padding: 0 2ch;
                    outline: none;
                    background-color: transparent;
                    background-image: linear-gradient(
                            to bottom,
                            transparent 0,
                            transparent 0.5lh,
                            var(--mapped-primary) 0.5lh,
                            var(--mapped-primary) calc(100% - 0.5lh),
                            transparent calc(100% - 0.5lh),
                            transparent
                    );
                    height: 3lh;
                    margin-right: 1ch;
                    cursor: pointer;
                }
            }
        }
    }

    @layer utils {
        [box-=square], [box-=round], [box-=double] {
            position: relative;
            isolation: isolate;
            padding: 1lh 1ch
        }
    }

    :root {
        @layer components {
            textarea,
            [is-~='textarea'],
            &[size-='thicc'] {
                min-height: 15lh;
                padding: 1lh 2ch;
                width: 100%;
            }
        }
    }


    .form-wrapper {
        .error {
            color: var(--red);
        }

        .field {
            margin-bottom: 1lh;

            label {
                display: block;
                margin-bottom: 1lh;
                color: var(--yellow);
            }
            &.input-youtube-link {
                > div {
                    margin-bottom: 1lh;

                }
                label {
                    color: var(--yellow);
                }
            }
        }



        .field.field-project-name input {
            margin-bottom: 1lh;
        }

        ul li {
            line-height: var(--line-height-list);
            margin-bottom: 0.5lh;
        }

        .form-textarea {
            line-height: var(--line-height-input)
        }

        .description-text {
            margin-bottom: 1lh;

            > p {
                margin-bottom: 0.5lh;
            }
        }
    }

    @layer base {
        :root {
            --font-family: "Roboto Mono", monospace;
            --line-height-paragraph: 1.8;
            --line-height-code: 1.8;
            --line-height-list: 1.6;
            --line-height-input: 1.8;
        }
    }

    p {
        line-height: var(--line-height-paragraph);
    }

    @layer utils {
        [box-~='square'],
        [box-~='round'],
        [box-~='double'] {
            --box-border-color: var(--maroon);
        }

        div.site-icon[box-~='round'] {
            --box-border-color: var(--surface0);
        }

        div.input-youtube-link[box-~='round'] {
            --box-border-color: var(--surface0);
        }

        div.select-container[box-~='round'] {
            --box-border-color: var(--surface0);
        }

        div.field-upload-audio[box-~='round'] {
            --box-border-color: var(--surface0);
        }

        div.audio-wrapper[box-~='round'] {
            --box-border-color: var(--surface0);
        }

        div.grid-content-two-columns {
            [box-~='square'],
            [box-~='round'],
            [box-~='double'] {
                --box-border-color: var(--surface0);
            }
        }
    }

    code[class*="language-"],
    pre[class*="language-"] {
        color: #f8f8f2;
        background: none;
        text-shadow: 0 1px rgba(0, 0, 0, 0.3);
        text-align: left;
        white-space: pre-wrap;
        word-spacing: normal;
        word-break: normal;
        word-wrap: normal;
        line-height: var(--line-height-code);
        tab-size: 4;
        hyphens: none;
    }

    pre[class*="language-"] {
        display: flex;
        justify-content: center;
    }

    /* Code blocks */

    pre[class*="language-"] {
        padding: 1em;
        margin: .5em 0;
        overflow: auto;
        border-radius: 0.3em;
    }

    :not(pre) > code[class*="language-"],
    pre[class*="language-"] {
        background: #282a36;
    }

    /* Inline code */

    :not(pre) > code[class*="language-"] {
        padding: .1em;
        border-radius: .3em;
        white-space: normal;
    }

    .token.comment,
    .token.prolog,
    .token.doctype,
    .token.cdata {
        color: #6272a4;
    }

    .token.punctuation {
        color: #f8f8f2;
    }

    .namespace {
        opacity: .7;
    }

    .token.property,
    .token.tag,
    .token.constant,
    .token.symbol,
    .token.deleted {
        color: #ff79c6;
    }

    .token.boolean,
    .token.number {
        color: #bd93f9;
    }

    .token.selector,
    .token.attr-name,
    .token.string,
    .token.char,
    .token.builtin,
    .token.inserted {
        color: #50fa7b;
    }

    .token.operator,
    .token.entity,
    .token.url,
    .language-css .token.string,
    .style .token.string,
    .token.variable {
        color: #f8f8f2;
    }

    .token.atrule,
    .token.attr-value,
    .token.function,
    .token.class-name {
        color: #f1fa8c;
    }

    .token.keyword {
        color: #8be9fd;
    }

    .token.regex,
    .token.important {
        color: #ffb86c;
    }

    .token.important,
    .token.bold {
        font-weight: bold;
    }

    .token.italic {
        font-style: italic;
    }

    .token.entity {
        cursor: help;
    }

    svg {
        display: block;
    }

    @media (max-width: 768px) {
        .audio-player audio {
            width: 100%;
        }
    }


</style>