---
import Head from "../components/Head.astro";
import Footer from '../components/Footer.astro';
import Icon from '../components/Icon.astro';
import Menu from '../components/Menu.astro';
const {sectionName, ...props} = Astro.props;

let classValue = '';
if (sectionName === 'Projects') {
    classValue = 'projects-layout';
}
if (sectionName === 'Categories') {
    classValue = 'categories-layout';
}
---
<!doctype html>
<html lang="en-GB" data-webtui-theme="catppuccin-mocha">
<head>
    <Head/>
</head>
<body>
<div class={`container ${classValue}`}>
    <header>
        <div class="icon-wrapper">
            <Icon/>
        </div>
        <div class="menu-wrapper">
            <Menu/>
        </div>
    </header>
    <slot/>
    <Footer/>
</div>
</body>
</html>
<style>
    .container > header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1lh;
    }
    @media (max-width: 768px) {
        .container > header {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        .icon-wrapper {
            margin-bottom: 0;
        }
    }
</style>