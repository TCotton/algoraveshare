{
  "name": "algoraveshare-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "install:deps": "echo 'Dependencies checked for backend'",
    "deps:check": "test -d node_modules || echo 'Run: pnpm install from root'",
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/effect-server.ts",
    "test:unit": "vitest run",
    "typecheck": "tsc --noEmit -p tsconfig.src.json",
    "lint": "eslint --config ./eslint.config.mjs --ext .js,.mjs,.cjs,.ts,.mts,.cts src/ scripts/ db/",
    "lint:fix": "eslint --config ./eslint.config.mjs --fix --ext .js,.mjs,.cjs,.ts,.mts,.cts src/ scripts/ db/",
    "migration:generate": "npm run build && drizzle-kit generate --config=./db/configs/drizzle.config.ts --name=all-tables --custom",
    "migration:check": "node ./scripts/check-drizzle-schema.mjs",
    "migration:push": "node -r esbuild-register ./db/migrate.ts",
    "db:push": "drizzle-kit push --config=./db/configs/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=./db/configs/drizzle.config.ts",
    "db:seed": "node ./scripts/seed-database.mjs",
    "db:check": "node ./scripts/check-db-connection.mjs",
    "check:tests": "node -e \"const {execSync}=require('child_process');let f='';try{f=execSync('git diff --name-only --cached').toString().trim();}catch(e){} if(!f)f=execSync('git --no-pager diff --name-only HEAD~1 HEAD').toString().trim(); if(!f)console.log('No changed files found'); process.env.CHANGED_FILES=f; require('../.github/actions/check-tests/index.js');\"",
    "lint:openapi": "spectral lint openapi/openapi.yaml --ruleset .spectral.yml || true",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@effect/data": "^0.18.7",
    "@effect/io": "^0.41.2",
    "@effect/opentelemetry": "^0.58.0",
    "@effect/platform": "^0.92.1",
    "@effect/platform-node": "^0.98.3",
    "@effect/schema": "^0.75.5",
    "@fastify/aws-lambda": "^6.1.1",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@repo/schema": "workspace:*",
    "drizzle-orm": "^0.44.6",
    "effect": "^3.18.4",
    "fastify": "^5.6.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@effect/eslint-plugin": "^0.3.2",
    "@effect/language-service": "^0.52.1",
    "@effect/vitest": "^0.26.0",
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@stoplight/spectral-cli": "^6.8.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.37.0",
    "eslint-plugin-codegen": "^0.34.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "openapi-typescript": "^7.9.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
