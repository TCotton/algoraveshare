---
import DropDownMenu from './DropDownMenu.jsx';
---
<DropDownMenu client:visible/>
<style>
    @layer components {
        :root {
            .menu-popover {
                background: white;
                > div {
                    margin-bottom: 2lh;
                }
                ul {
                    background : white;
                }
            }
            .menu-wrapper button.button {
                margin: 1ch 2ch !important;
            }

            .menu-wrapper button:hover {
                cursor: pointer;
            }

            .separator {
                margin-top: 0.5rem;
                margin-bottom: 0.5rem;
                height: 0;
                width: 100%;
                border-top-width: 1px;
                border-color: hsl(204 20% 88%);
            }

            .separator:where(.dark, .dark *) {
                border-color: hsl(204 4% 28%);
            }

            .menu {

            }

            .menu:where(.dark, .dark *) {
                border-color: hsl(204 4% 24%);
                background-color: hsl(204 4% 16%);
                color: white;
                box-shadow: none;
            }

            .menu-item {
                display: flex;
                z-index: 10000;
                cursor: default;
                scroll-margin: 0.5rem;
                align-items: center;
                gap: 0.5rem;
                border-radius: 0.25rem;
                padding: 0.5rem;
                outline: none;
                background-color: var(--flamingo);

                &:hover {
                    cursor: pointer;
                }
            }

            .menu-item[aria-disabled="true"] {
                opacity: 0.25;
            }

            .menu-item[data-active-item] {
                background-color: var(--blue);
                color: white;
            }

            .menu-item:active,
            .menu-item[data-active] {
                background-color: var(--blue);
                padding-top: 9px;
                padding-bottom: 7px;
            }
        }
    }

</style>