{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test:unit": {
      "dependsOn": ["^test:unit"]
    },
    "test:e2e:headless": {
      "dependsOn": ["^test:e2e:headless"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "install:deps": {
      "cache": false
    },
    "deps:check": {
      "cache": false,
      "dependsOn": ["^deps:check"]
    }
  }
}